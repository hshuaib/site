<%# Rails flash messages styled for Bootstrap 3.0 %>
<br><br>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div id= 'notice' class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true" align='left'>&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
